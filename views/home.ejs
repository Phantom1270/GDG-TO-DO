<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo-list</title>
  <link rel="stylesheet" href="/styles/auth.css"> <!-- Use same CSS as login -->
</head>

<body>
  <div class="auth-container">
    <h1>TO DO LIST</h1>

    <div style="display: flex; justify-content: flex-end; gap: 10px; margin-bottom: 20px;">
      <form action="/logout" method="get">
        <button type="submit" class="logout-button">Logout</button>
      </form>
      <button id="theme-toggle" class="theme-toggle">üåô Dark Mode</button>
    </div>

    <!-- Add Todo Form -->
    <form action="/user/<%= userId %>/add?sort=<%= currentSort %>" method="post" class="form-container">
      <input type="text" name="taskName" placeholder="Todo Name" class="js-name-input name-input" required>
      <input type="date" name="dueDate" class="js-due-date-input due-date-input" required>
      <input type="time" name="dueTime" class="js-due-time-input due-time-input" required>
      <select name="priority" class="priority-select">
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
      </select>
      <button type="submit" class="add-todo-button js-add-todo-button">Add</button>

      <div class="filter-container">
        <label for="filter">Sort by:</label>
        <select id="filter" class="filter-select">
          <option value="time" <%= currentSort==="time" ? "selected" : "" %>>Time</option>
          <option value="priority" <%= currentSort==="priority" ? "selected" : "" %>>Priority</option>
        </select>
      </div>
    </form>

    <!-- Todo List -->
    <div class="todo-grid">
      <% taskList.forEach((task,index)=> { %>
        <div class="todo-item">
          <!-- First Line: Name + Priority -->
          <div class="first-line">
            <input type="checkbox" class="task-checkbox" data-task-id="<%= task.taskId %>" <% if(task.done){ %> checked <% } %>>
            <div class="task-name"><%= task.taskName %></div>
            <div class="task-priority <%= task.priority.toLowerCase() %>"><%= task.priority %></div>
          </div>

          <!-- Second Line: Date + Time + Status + Delete -->
          <div class="second-line">
            <div class="task-date"><%= task.dueDate %></div>
            <div class="task-time"><%= task.dueTime %></div>
            <div class="task-status" data-due-date="<%= task.dueDate %>" data-due-time="<%= task.dueTime %>">Loading...</div>
            <form action="/user/<%= userId %>/delete/<%= task.taskId %>" method="get">
              <input type="hidden" name="sort" value="<%= currentSort %>">
              <button type="submit" class="delete-todo-button">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>

  </div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const toggleButton = document.getElementById("theme-toggle");

  // Check localStorage for saved theme
  if(localStorage.getItem("theme") === "dark") {
    document.body.classList.add("dark-mode");
    toggleButton.textContent = "‚òÄÔ∏è Light Mode";
  }

  toggleButton.addEventListener("click", () => {
    document.body.classList.toggle("dark-mode");
    const isDark = document.body.classList.contains("dark-mode");
    toggleButton.textContent = isDark ? "‚òÄÔ∏è Light Mode" : "üåô Dark Mode";
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
});
</script>

</body>

</html>
