<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo-list</title>
  <link rel="stylesheet" href="/styles/home.css">
</head>

<body>
  <h1>TO DO LIST</h1>
  <div class="todo-input-grid">
    <form action="/" method="post">
      <input type="text" name="node-task" id="" placeholder="Todo Name" class="js-name-input name-input">
      <input type="date" name="node-date" class="js-due-date-input due-date-input">
      <button type="submit" class="add-todo-button js-add-todo-button">Add</button>
    </form>
    <br>
    <br>
    <div>
      <%taskList.forEach((task,index)=> { %>
        <div><%=tack["node-task"] %></div> 
        <div> <%=task["node-date"] %></div>
        <%# <button class="delete-todo-button js-delete-todo-button">Delete</button> %>
        <button ><a href="/delete/<%=node-task%>">Delete</a></button>
      <%}%>
    </div>


  </div>
  <div class="js-todoList todo-grid">
  </div>

   
  </script>


</body>

</html>