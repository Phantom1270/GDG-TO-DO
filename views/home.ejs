<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo-list</title>
  <link rel="stylesheet" href="/styles/home.css">
</head>

<body>
  <h1>TO DO LIST</h1>
  <div style="display: flex; float:right; margin-right:20px;">
    <form action="/logout" method="get" style=" float:right; margin-right:20px;">
      <button type="submit" class="logout-button">Logout</button>
    </form>
    <button id="theme-toggle" class="theme-toggle">ðŸŒ™ Dark Mode</button>
  </div>
  <div class="todo-input-grid">
    <form action="/user/<%= userId %>/add?sort=<%= currentSort %>" method="post" class="form-container">
      <div></div>
      <input type="text" name="taskName" id="" placeholder="Todo Name" class="js-name-input name-input">
      <input type="date" name="dueDate" class="js-due-date-input due-date-input">
      <input type="time" name="dueTime" class="js-due-time-input due-time-input">
      <select name="priority" class="priority-select">
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
      </select>
      <button type="submit" class="add-todo-button js-add-todo-button">Add</button>
      <div class="filter-container">
        <label for="filter">Sort by:</label>
        <select id="filter" class="filter-select">
          <option value="time" <%=currentSort==="time" ? "selected" : "" %>>Time</option>
          <option value="priority" <%=currentSort==="priority" ? "selected" : "" %>>Priority</option>
        </select>
      </div>

    </form>
    <br>
    <br>
    <div class="todo-grid">
      <% taskList.forEach((task,index)=> { %>
        <div class="todo-item">
          <input type="checkbox" class="task-checkbox" data-task-id="<%= task.taskId %>" <% if(task.done){ %> checked <%
            } %>>
            <div class="task-name">
              <%= task.taskName %>
            </div>
            <div class="task-date">
              <%= task.dueDate %>
            </div>
            <div class="task-status" data-due-date="<%= task.dueDate %>" data-due-time="<%= task.dueTime %>">
              Loading...</div>
            <div class="task-priority <%= task.priority.toLowerCase() %>">
              <%= task.priority %>
            </div>
            <form action="/user/<%= userId %>/delete/<%= task.taskId %>" method="get">
              <input type="hidden" name="sort" value="<%= currentSort %>">
              <button type="submit" class="delete-todo-button">Delete</button>
            </form>


        </div>
        <% }) %>
    </div>
    <script src="/scripts/theme.js"></script>
    <script src="/scripts/time.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Select all checkboxes
        const checkboxes = document.querySelectorAll(".task-checkbox");

        checkboxes.forEach(checkbox => {
          checkbox.addEventListener("change", () => {
            const taskId = checkbox.dataset.taskId;
            const userId = "<%= userId %>";

            fetch(`/user/${userId}/toggle-done/${taskId}`, {
              method: "POST"
            })
              .then(res => {
                if (!res.ok) {
                  alert("Failed to update task status");
                }
              })
              .catch(err => {
                console.error(err);
                alert("Error updating task status");
              });
          });
        });
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const filterSelect = document.getElementById("filter");

        filterSelect.addEventListener("change", () => {
          const value = filterSelect.value;
          window.location.href = `/user/<%= userId %>?sort=${value}`;
        });
      });
    </script>



</body>

</html>